{
  "id": "kafka",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "wurstmeister/kafka:2.11-2.0.0",
      "forcePullImage": true
    }
  },
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "cpus": 1,
  "env": {
    "KAFKA_ADVERTISED_HOST_NAME": "_{HOSTNAME_COMMAND}",
    "HOSTNAME_COMMAND": "echo $HOST",
    "KAFKA_ZOOKEEPER_CONNECT": "$MESOS_HOST:2181/kafka",
    "KAFKA_AUTO_CREATE_TOPICS_ENABLE": "true",
    "JMX_PORT": "9093",
    "DELETE_TOPIC_ENABLE": "true"
  },
  "healthChecks": [
    {
      "port": 9092,
      "protocol": "MESOS_TCP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "instances": 1,
  "mem": 1024.0,
  "networks": [
    {
      "mode": "host"
    }
  ],
  "portDefinitions": [
    {
      "port": 9092,
      "name": "node"
    },
    {
      "port": 9093,
      "name": "jmx"
    }
  ]
}
